@model Author


<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center  mb-4">Author</h1>
            <form method="post" asp-action="Authors" asp-controller="Home">
                <div asp-validation-summary="All" class="mb-3">
                    <div class="mb-3">
                        <label asp-for="authorName" class="form-label">Author Name</label>
                        <input asp-for="authorName" class="form-control" type="text" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="authorBirthDate" class="form-label">Birth Date</label>
                        <input class="form-control" type="date" asp-for="authorBirthDate">
                    </div>

                    <div class="mb-3">
                        <legend>Gender</legend>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="authorGender" value="male" id="male">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="authorGender" id="female" value="female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Author</button>
                    <button type="reset" class="btn btn-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" asp-action="searchAuthor" class="d-flex mb-3">
                <input type="search" placeholder="Search..." class="form-control me-2" name="searchKey">
                <button class="btn btn-primary" type="submit">Search</button>
            </form>

            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Birth Date</th>
                            <th>Gender</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in ViewBag.allAuthors)
                        {
                                <tr>
                                    <td>@a.AuthorId</td>
                                    <td>@a.authorName</td>
                                    <td>@a.authorBirthDate</td>
                                    <td>@a.authorGender</td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="deleteAuthor" asp-route-id="@a.AuthorId">Delete</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
