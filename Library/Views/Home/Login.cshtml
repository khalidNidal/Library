



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <h1>Login</h1>
            </div>

            <form method="post">
                <div class="form-outline mb-4">
                    <input type="text" id="loginName" class="form-control" name="name" placeholder="Enter your Username" required/>
                    <label class="form-label" for="loginName">Username</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" id="loginPassword" class="form-control" name="pass" placeholder="Enter your Password" required />
                    <label class="form-label" for="loginPassword">Password</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                </div>

                <div class="text-center">
                    <p> You dont have an account? <a asp-action="Register" class="text-light">Sign Up</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
