<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>


        footer {
          
                margin-top: auto;


        }
body {
  min-height: 90vh;
  display: grid;
  
  grid-template-rows: 1fr auto;
}

        
   

       

       
    </style>



</head>
<body class = "bg-secondary d-flex flex-column ">

    <header >
        <nav class="navbar navbar-expand-lg navbar-dark navbar-toggleable-sm bg-info mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"  asp-controller="Home" asp-action="Index">Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Home" asp-action="Books">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Home" asp-action="Authors">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Home" asp-action="changePass">Change password</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-5">
        <main role="main" class="pb-3 mb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" border-top ">
        
            <div class="container d-flex flex-row justify-content-around mt-3 ">
                <div class=" text-info">
                             &copy; 2024 - Library - <a class = "text-info" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                        <div >
                            <a class=" text-info"  asp-controller="Home" asp-action="Index">Home</a>
                        </div>
                        <div >
                            <a class=" text-info" asp-controller="Home" asp-action="Books">Books</a>
                        </div>
                        
                    
                    </div>
      
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
